<tr id="saving-<%= saving.id %>">
  <td>
    <p><%= saving.user.name %></p>
    <p><%= saving.value %></p>
  </td>

  <% if current_user.own?(saving) %>
    <td class="action">
      <ul class="list-inline justify-content-center" style="float: right;">
        <li class="list-inline-item">
          <%= link_to edit_saving_path(saving), class: "edit-saving-link" do %>
            <i class="fa-solid fa-pencil"></i>
          <% end %>
        </li>
        <li class="list-inline-item">
          <%= link_to saving_path(saving), data: { turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm') } do %>
            <i class="fa-solid fa-trash fa-shake"></i>
          <% end %>
        </li>
      </ul>
    </td>
  <% end %>
</tr>