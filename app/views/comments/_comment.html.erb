<tr id="comment-<%= comment.id %>">
  <td>
    <h3 class='small'><%= comment.user.name %></h3>
    <p><%= simple_format(comment.body) %>
  </td>

  <% if current_user.own?(comment) %>
    <td class="action">
      <ul class="list-inline justify-content-center" style="float: right;">
        <li class="list-inline-item">
          <%= link_to edit_comment_path(comment), class: "edit-comment-link" do %>
            <i class="fa-solid fa-pencil"></i>
          <% end %>
        </li>
        <li class="list-inline-item">
          <%= link_to comment_path(comment), data: { turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm') } do %>
            <i class="fa-solid fa-trash fa-shake"></i>
          <% end %>
        </li>
      </ul>
    </td>
  <% end %>
</tr>