<div class='mb-3'>
  <script src="https://accounts.google.com/gsi/client" async defer></script>

  <%= form_with url: login_path do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  
    <%= f.submit 'ログイン' %>
  <% end %>

