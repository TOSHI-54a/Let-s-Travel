<div class='mb-3'>
  <%= form_with url: login_path do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  
    <%= f.submit 'ログイン' %>
  <% end %>
  <div class='text-center'>
    <%= link_to 'アカウントを作成', new_user_path %>
  </div>
</div>