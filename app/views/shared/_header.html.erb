<header>
  <nav class="navbar">
    <div class="container-fluid" data-controller="menu">
      <h6>
        <%= link_to "Let's Travel!!", root_path, class: 'navbar-brand' %>
      </h6>
      <!-- ハンバーガーボタン -->
      <div class="hamburger" data-action="click->menu#toggle">
        <span>a</span>
        <span></span>
        <span></span>
      </div>
      <!-- ナビゲーションメニュー -->
      <ul class="menu" data-menu-target="menu">
        <li>
          <%= link_to '旅行先を探す', new_travel_search_path, class: 'nav-link' %>
        </li>
        <li>
          <%= link_to '節約する', savings_path, class: 'nav-link' %>
        </li>
        <li>
          <%= link_to '旅行体験記', boards_path, class: 'nav-link' %>
        </li>
        <li>
          <%= link_to '新規会員登録', new_user_path, class: 'nav-link' %>
        </li>
        <li>
          <% if logged_in? %>
            <%= link_to 'マイページ', user_path(current_user), class: 'nav-link' %>
            <%= button_to 'ログアウト', logout_path, method: :delete, data: { turbo: false, confirm: "本当にログアウトしますか？" }, class: 'nav-link' %>
          <% else %>
            <%= link_to 'ログイン', login_path, class: 'nav-link' %>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
</header>
